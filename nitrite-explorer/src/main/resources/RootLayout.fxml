<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.72"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dizitart.no2.ui.RootController">
    <bottom>
        <ButtonBar blendMode="MULTIPLY" BorderPane.alignment="CENTER_LEFT">
            <buttons>
                <Slider fx:id="brightness">
                    <tooltip>
                        <Tooltip text="Change brightness"/>
                    </tooltip>
                </Slider>
                <Button mnemonicParsing="false" onAction="#exit" text="Exit"/>
                <Button mnemonicParsing="false" onAction="#about" text="About"/>
            </buttons>
            <padding>
                <Insets bottom="10.0" right="10.0" top="10.0"/>
            </padding>
        </ButtonBar>
    </bottom>
</BorderPane>
